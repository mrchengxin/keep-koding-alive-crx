{
    "manifest_version": 2,
    
    "name": "Koding Robot",
    "description": "A chrome extension to keep koding vm always on",
    "version": "1.0",
    
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    
    "content_scripts": [
        {
            "matches": ["https://koding.com/*"],
            "js": ["content.js"]
        }
    ],
    
    "browser_action": {
        "default_icon": "icon256.png",
        "default_popup": "popup.html",
        "default_title": "Time Settings"
    },
    "permissions": [
        "tabs",
        "alarms",
        "http://*/*",
        "https://*/*"
    ]
}
